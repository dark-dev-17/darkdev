@model DataAdminGold.Ecom_PedidoNota

@{
    ViewData["Title"] = "Edit";
}
<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-6 mx-auto">
            <div class="jumbotron" style="background-color: #fff">
                <div class="card text-center">
                    <div class="card-header">
                        Nueva nota
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Id" type="hidden"  class="form-control" />
                                <input type="hidden" asp-for="Pedido" class="form-control" />
                                <label asp-for="Folio" class="control-label"></label>
                                <input asp-for="Folio" class="form-control" />
                                <span asp-validation-for="Folio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Details","Pedido",new { Id = Model.Pedido}, new { @class="btn btn-sm btn-secondary" })
                                <input type="submit" value="Update" class="btn btn-sm btn-primary" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-muted">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
