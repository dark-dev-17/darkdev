@model DarkSite.Models.PedidoDetalle

@{
    ViewData["Title"] = "PedidoDetalle";
}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark bd">
    <a class="navbar-brand tx-bold tx-spacing--2 order-1" href="#">Details purchase</a>
    <button class="navbar-toggler order-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu wd-20 ht-20"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
    </button>
</nav>
<div data-label="Details purchase" class="df-example demo-forms mt-3 mb-3 " id="">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Pedido.Descripcion" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="hidden" asp-for="Pedido.IdPedido" class="form-control" disabled />
                <input type="hidden" asp-for="Pedido.Total" class="form-control" disabled />
                <input type="text" asp-for="Pedido.Descripcion" class="form-control" disabled />
                <span asp-validation-for="Pedido.Descripcion" class="text-danger"></span>
            </div>
            <label asp-for="Pedido.IdProveedor" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="text" asp-for="Proveedor.Nombre" class="form-control" disabled />
                <span asp-validation-for="Pedido.IdProveedor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Pedido.FechaCompra" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="date" asp-for="Pedido.FechaCompra" class="form-control" disabled />
                <span asp-validation-for="Pedido.FechaCompra" class="text-danger"></span>
            </div>
            <label asp-for="Pedido.Total" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input type="number" asp-for="Pedido.Total" class="form-control" disabled />
                <span asp-validation-for="Pedido.Total" class="text-danger"></span>
            </div>
        </div>
    </form>
    <div class="row mt-4 mb-4">
        <div class="col-sm-6 col-lg-3">
            <div class="card card-body">
                <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">Total notas</h6>
                <div class="d-flex d-lg-block d-xl-flex align-items-end">
                    <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">$ @Model.PedidoNotas.Sum(a => a.Total)</h3>
                    @if (Model.PedidoNotas.Sum(a => a.Total) == Model.Pedido.Total)
                    {
                        <p class="tx-11 tx-color-03 mg-b-0"><span class="tx-medium tx-success">$0<i class="icon ion-md-arrow-up"></i></span> Good!!</p>
                    }
                    else
                    {
                        <p class="tx-11 tx-color-03 mg-b-0"><span class="tx-medium tx-danger">@Html.Raw(Model.PedidoNotas.Sum(a => a.Total) - Model.Pedido.Total)<i class="icon ion-md-arrow-down"></i></span> Difference</p>
                    }
                </div>
                <div class="chart-three">
                    <div id="flotChart3" class="flot-chart ht-30" style="padding: 0px; position: relative;"><canvas class="flot-base" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas><canvas class="flot-overlay" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas></div>
                </div><!-- chart-three -->
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mg-t-10 mg-sm-t-0">
            <div class="card card-body">
                <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">Total productos</h6>
                <div class="d-flex d-lg-block d-xl-flex align-items-end">
                    <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">3,137</h3>
                    <p class="tx-11 tx-color-03 mg-b-0"><span class="tx-medium tx-danger">0.7% <i class="icon ion-md-arrow-down"></i></span> than last week</p>
                </div>
                <div class="chart-three">
                    <div id="flotChart4" class="flot-chart ht-30" style="padding: 0px; position: relative;"><canvas class="flot-base" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas><canvas class="flot-overlay" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas></div>
                </div><!-- chart-three -->
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mg-t-10 mg-sm-t-0">
            <div class="card card-body">
                <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">Total aportaciones</h6>
                <div class="d-flex d-lg-block d-xl-flex align-items-end">
                    <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">3,137</h3>
                    <p class="tx-11 tx-color-03 mg-b-0"><span class="tx-medium tx-danger">0.7% <i class="icon ion-md-arrow-down"></i></span> than last week</p>
                </div>
                <div class="chart-three">
                    <div id="flotChart4" class="flot-chart ht-30" style="padding: 0px; position: relative;"><canvas class="flot-base" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas><canvas class="flot-overlay" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas></div>
                </div><!-- chart-three -->
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mg-t-10 mg-sm-t-0">
            <div class="card card-body">
                <h6 class="tx-uppercase tx-11 tx-spacing-1 tx-color-02 tx-semibold mg-b-8">Total aportaciones</h6>
                <div class="d-flex d-lg-block d-xl-flex align-items-end">
                    <h3 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1">$ @Model.AportacionesPedidos.Sum(a => a.Aporte)</h3>
                    @if (Model.AportacionesPedidos.Sum(a => a.Aporte) == Model.Pedido.Total)
                    {
                        <p class="tx-11 tx-color-03 mg-b-0"><span class="tx-medium tx-success">$0<i class="icon ion-md-arrow-up"></i></span> Good!!</p>
                    }
                    else
                    {
                        <p class="tx-11 tx-color-03 mg-b-0"><span class="tx-medium tx-danger">@Html.Raw(Model.AportacionesPedidos.Sum(a => a.Aporte) - Model.Pedido.Total)<i class="icon ion-md-arrow-down"></i></span> Difference</p>
                    }
                </div>
                <div class="chart-three">
                    <div id="flotChart4" class="flot-chart ht-30" style="padding: 0px; position: relative;"><canvas class="flot-base" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas><canvas class="flot-overlay" style="direction: ltr; position: absolute; left: 0px; top: 0px; width: 250.5px; height: 30px;" width="250" height="30"></canvas></div>
                </div><!-- chart-three -->
            </div>
        </div>
    </div>
</div>