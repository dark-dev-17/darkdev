@model DarkDev.Models.Pedido

@{
    ViewData["Title"] = "Create new purchase";
}
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark bd">
        <a class="navbar-brand tx-bold tx-spacing--2 order-1" href="#">@ViewData["Title"]</a>
        <button class="navbar-toggler order-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu wd-20 ht-20"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
        </button>
    </nav>
    <div data-label="@ViewData["Title"]" class="df-example demo-forms mt-3" id="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Descripcion" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    @*<input type="hidden" asp-for="IdPedido" class="form-control" />*@
                    @*<input type="hidden" asp-for="Total" class="form-control" />*@
                    <input type="text" asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <label asp-for="IdProveedor" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <select asp-for="IdProveedor" asp-items="ViewBag.Proveedores" class="form-control select2">
                        <option value="0">Selecciona una opción</option>
                    </select>
                    <span asp-validation-for="IdProveedor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FechaCompra" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="date" asp-for="FechaCompra" class="form-control" />
                    <span asp-validation-for="FechaCompra" class="text-danger"></span>
                </div>
                <label asp-for="Total" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <input type="number" asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mg-b-0">
                <div class="col-sm-12 text-right">
                    <a href="@Url.Action("Index","Pedido")" class="btn btn-sm btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
                </div>
            </div>
        </form>
    </div>
        